<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorOpacity0"
    android:layout_marginLeft="11dp"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:src="@drawable/ic_whatshot_24px_white"
        android:scaleType="centerCrop"
        android:background="@drawable/opac20circle"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_best_song_title_artist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxWidth="90dp"
            android:text="아티스트"
            android:maxLines="1"
            android:textColor="@color/colorOpacity70"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_best_song_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="노래 제목"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:maxLines="2"
            android:textSize="12sp"
            android:textStyle="bold"
            />

    </LinearLayout>




</LinearLayout>
