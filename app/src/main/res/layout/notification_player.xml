<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/noti_alt_album"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/test1024"/>

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Sample Title"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/noti_btn_rewind"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_left_white_24dp"/>

    <ImageButton
        android:id="@+id/noti_btn_play_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/baseline_play_arrow_white_24dp"/>

    <ImageButton
        android:id="@+id/noti_btn_forward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_right_white_24dp"/>

    <ImageButton
        android:id="@+id/noti_btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/baseline_shuffle_white_24dp"/>

</LinearLayout>